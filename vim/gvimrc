"colorscheme darkblue
"clipboard共有
set guioptions+=a
""insert modeから離れるときにIME off
"set noimdisable
"set iminsert=2

"色設定
colorscheme inkpot
hi Identifier guifg=LightSkyBlue3
hi Number guifg=Red
hi Type guifg=DarkOliveGreen3
hi string guibg=NONE guifg=LightGoldenrod2
hi Comment guifg=MediumPurple4
hi LineNr guifg=Grey30 guibg=NONE
hi Normal guifg=LightGray

"下線設定
set cursorline
hi CursorLine gui=underline guifg=NONE guibg=NONE
hi CursorLineNr guifg=NavyBlue guibg=White

"NERDTree color setting
hi NERDTreeBookmarksLeader  guifg=DeepSkyBlue3

"必要ならneocompleteの補完リストの色設定
"hi Pmenu guibg=LightBlue
"hi PmenuSel guibg=red
"hi PmenuSbar guibg=LightBlue

"ビープ音を消す
set visualbell t_vb=

"透過
autocmd GUIEnter * set transparency=240 "0~255?

function! Hide(...)
    let l:tra = &transparency
    let l:time = get(a:,1,5)
    set transparency=1
    execute "sleep " . l:time
    execute "set transparency=" . l:tra
endfunction
